<% @page_title = ["GrandMenu.com", params[:address]].join(" :: ") %>

<div id="banner">
  <div>
    <%= image_tag "logo_home_page.png", :width => 282, :height => 127, :alt => "Commander en ligne avec GrandMenu.com", :id => "logo" %>
    <div id="tag_line">Trouvez les restaurants qui <br/>livrent proche de chez vous!</div>
  </div>
</div>

<div id="find">
  <div id="address">
    <%= render :partial => 'searches/form' %>
  </div>
  <div id="instruction">
    <span id="instructions">
      <% if user_signed_in? -%>
        <%= render @searches %>
      <% else -%>
        <p>Tapez votre adresse pour trouver des restaurants proche de vous.</p>
        <p class="example">Example: 12 rue des Affam√©s, St-Hubert, QC</p>
      <% end -%>
    </span>
  </div>
</div>

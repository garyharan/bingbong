<%= form_for(@shop) do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shop.errors.count, "erreur") %>:</h2>

      <ul>
      <% @shop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nom %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Téléphone %><br />
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :ville %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :adresse %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :province %><br />
    <%= f.text_field :province %>
  </div>
  <div class="field">
    <%= f.label :pays %><br />
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :code_postal %><br />
    <%= f.text_field :postal_code %>
  </div>
  <div class="actions">
    <%= f.submit "Créez" %>
  </div>
<% end %>

<% @page_title = "BingBong.ca" %>

<div id="banner">
  <section>
    <%= image_tag "logo.png", :width => 282, :height => 127, :alt => "Commander en ligne avec BingBong.ca", :id => "logo" %>
  </section>
</div>

<h2>Acceptez les commandes en ligne.</h2>
<% if user_signed_in? && current_user.shops.any? -%>
  <h3>Mes magasins</h3>
  <ul>
    <% current_user.shops.each do |shop| -%>
      <li><%= link_to shop.name, shop %></li>
    <% end -%>
  </ul>
<% else -%>
  <div>Est ce que vous avez un magasin qui fait des livraisons?</div>
  <%= link_to "Recevez des commandes en ligne!", new_shop_path %>
<% end -%>

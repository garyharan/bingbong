<h5>
  <span id="<%= dom_id(category) %>" class="category_name"><%= category.name %></span>
  <% if @shop.owned_by?(current_user) %>
    <%= form_for [category.shop, category], :method => :put, :remote => true, :id => dom_id(category, 'update') do |f| %>
      <%= f.text_field :name %>
    <% end -%>
  <% end -%>
</h5>
<% category.items.each do |item| %>
  <h6 id="<%= dom_id item %>"><%= item.name %></h6>
<% end -%>
<% if @shop.owned_by?(current_user) -%>
  <%= form_for [category, Item.new], :remote => true, :html => { :class => 'owner' } do |f| %>
    <%= f.text_field :name, :placeholder => "Rajoutez un item.", :id => [dom_id(category), 'new_item'].join('_') %>
  <% end -%>
<% end -%>


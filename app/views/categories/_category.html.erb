<h5 id="<%= dom_id(category) %>">
  <%= category.name %>
</h5>
<% category.items.each do |item| %>
  <h6 id="<%= dom_id item %>"><%= item.name %></h6>
<% end -%>
<% if @shop.owned_by?(current_user) -%>
  <%= form_for [category, Item.new], :remote => true do |f| %>
    <%= f.text_field :name, :placeholder => "Rajoutez un item." %>
  <% end -%>
<% end -%>


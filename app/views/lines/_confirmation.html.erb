<tfoot id="confirmation">
  <tr>
    <% if @lines.empty? -%>
      <td colspan="5">Cliques sur un prix pour commander</td>
    <% else -%>
      <td colspan="5">
        <%= link_to "Confirmer", orders_path(:order => { :shop_id => @lines.first.shop_id }), :method => :post, :class => "order_confirmation_link" %>
      </td>
    <% end -%>
  </tr>
</tfoot>

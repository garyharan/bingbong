<h1>Listing time_blocks</h1>

<table>
  <tr>
    <th>Jour</th>
    <th>Starting</th>
    <th>Ending</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @time_blocks.each do |time_block| %>
  <tr>
    <td><%= human_weekday time_block.weekday %></td>
    <td><%= time_block.starting %></td>
    <td><%= time_block.ending %></td>
    <td><%= link_to 'Show', [@shop, time_block] %></td>
    <td><%= link_to 'Edit', edit_shop_time_block_path(@shop, time_block) %></td>
    <td><%= link_to 'Destroy', shop_time_block_path(@shop, time_block), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


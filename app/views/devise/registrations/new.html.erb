<% @page_title = ["GrandMenu.com", "Nouveau Compte"].join(" :: ") %>

<div id="logo_line">
  <div>
    <%= link_to image_tag("/images/logo_home_page.png", :width => 329, :height => 145, :alt => "Commander en ligne avec GrandMenu.com", :id => "logo"), root_path, :class => "home" %>
  </div>
</div>

<div id="devise">
  <div id="inner">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.text_field :first_name, :placeholder => "Jean" %>
      <%= f.text_field :last_name, :placeholder => "LaffamÃ©"  %>
      <%= f.text_field :email, :placeholder => "jean.laffame@exemple.com" %>
      <%= f.password_field :password, :placeholder => "*********" %>

      <%= f.submit "Envoyez moi le lien de confirmation" %>
    <% end %>

    <%= render :partial => "devise/shared/links" %>
  </div>
</div>

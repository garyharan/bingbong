<% @page_title = ["GrandMenu.com", "Connexion"].join(" :: ") %>

<div id="logo_line">
  <div>
    <%= image_tag "logo.png", :width => 282, :height => 127, :alt => "Commander en ligne avec GrandMenu.com", :id => "logo" %>
  </div>
</div>

<div id="devise">
  <div id="inner">
    <h2>Connexion</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <br/>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <br/>

      <% if devise_mapping.rememberable? -%>
        <%= f.label :remember_me, "Rappelez-vous de moi" %>
        <%= f.check_box :remember_me %>
        <br/>
      <% end -%>

      <%= f.submit "Je veux voir le menu!" %>
    <% end %>

    <%= render :partial => "devise/shared/links" %>
  </div>
</div>

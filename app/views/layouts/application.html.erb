<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <link rel="shortcut icon" href="/favicon.png" />
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults, 'jquery.placeholder', 'best_in_place' %>
    <%= csrf_meta_tag %>
    <link href='http://fonts.googleapis.com/css?family=Kreon:regular,bold' rel='stylesheet' type='text/css' />
  </head>
  <body class="<%= [controller.controller_name, controller.action_name].join(' ') %>">
    <%= render :partial => 'shared/user_nav' %>
    <%= render :partial => 'shared/flashes' %>
    <%= yield %>
  </body>
</html>
